<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_sender"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="200dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/round_15dp"
    android:padding="8dp"
    >

    <TextView
        android:id="@+id/sender_name"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginBottom="0dp"
        android:maxWidth="150dp"
        android:minWidth="70dp"
        android:textColor="@color/black"/>

    <ImageView
        android:background="@color/black"
        android:layout_marginTop="2dp"
        android:layout_below="@id/sender_name"
        android:id="@+id/image_sender"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/background_default"
        android:layout_marginBottom="2dp"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/sender_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_sender"
        android:maxWidth="300dp"
        android:minWidth="70dp"
        android:minHeight="20dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/sender_time"
        android:layout_width="50dp"
        android:layout_height="18dp"
        android:layout_below="@+id/sender_message"
        android:layout_alignStart="@+id/sender_message"
        android:layout_marginTop="0dp"
        android:text="@string/_11_11_am"
        android:textColor="#6E6E6E"
        android:textSize="11sp" />

</RelativeLayout>