<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_author"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_15dp"
        android:backgroundTint="#C8F6FF"
        android:maxWidth="200dp"
        android:padding="6dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/image_user"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:layout_marginBottom="2dp"
            android:background="@color/black"
            android:src="@drawable/background_default"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/user_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_user"
            android:layout_alignEnd="@id/image_user"
            android:maxWidth="200dp"
            android:minWidth="50dp"
            android:minHeight="20dp"
            android:textAlignment="textEnd"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/user_time"
            android:layout_width="60dp"
            android:layout_height="18dp"
            android:layout_below="@+id/user_message"
            android:layout_alignEnd="@+id/user_message"
            android:layout_marginTop="0dp"
            android:text="@string/_11_11_am"
            android:textAlignment="textEnd"
            android:textColor="#6E6E6E"
            android:textSize="11sp" />

    </RelativeLayout>
</RelativeLayout>